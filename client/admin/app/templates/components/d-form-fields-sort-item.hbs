<div class="d-f-list-group-item-label">
  <div>
    <span>
      <i class="fa fa-arrows" aria-hidden="true"></i> {{truncate field.label 30}} {{#unless field.allowNull}}*{{/unless}} - {{field.type}}
    </span>
    <span class="actions">
      <button type="button" class="btn btn-sm btn-default" {{action "toggleEditForm"}}>
        <i class="glyphicon glyphicon-pencil text-primary"></i>
      </button>
      <button class="btn btn-sm btn-default" {{action 'deleteItem' field}}>
        <i class="glyphicon glyphicon-remove text-danger"></i>
        {{#bs-tooltip placement="top"}}Deletar field [id:{{field.id}}]{{/bs-tooltip}}
      </button>
    </span>

    {{#if hideForm}}
      <button type="button" class="btn btn-sm btn-default pull-right" {{action "openEditForm" false}}>
        <i class="fa fa-caret-down" aria-hidden="true"></i>
      </button>
    {{else}}
      <button type="button" class="btn btn-sm btn-default pull-right" {{action "closeEditForm" true}}>
        <i class="fa fa-caret-up" aria-hidden="true"></i>
      </button>
    {{/if}}
  </div>

  {{#bs-collapse collapsed=hideForm}}
    {{component formComponentName field=field}}
  {{/bs-collapse}}
</div>
