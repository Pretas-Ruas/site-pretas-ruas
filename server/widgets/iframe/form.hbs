<form name="widget-form-{{type}}">
  <div class="form-group">
    <label for="widget-form-{{type}}-title">{{t 'title'}}</label>
    <input name="title" value="{{title}}" type="text" class="form-control" id="widget-form-{{type}}-title" placeholder="{{t 'widget.title'}}">
  </div>

  <div class="form-group">
    <label for="widget-form-{{type}}-html">HTML do iframe</label>
    <textarea rows="8" name="html" class="form-control">{{configuration.html}}</textarea>
  </div>

  <div class="form-group">
    <label for="widget-form-{{type}}-align">Posicionamento: </label>
    <select name="align" class="form-control">
      <option value="text-left" {{#ifCond configuration.align 'text-left'}}selected{{/ifCond}}>Esquerda</option>
      <option value="text-center" {{#ifCond configuration.align 'text-center'}}selected{{/ifCond}}>Centralizado</option>
      <option value="text-right" {{#ifCond configuration.align 'text-right'}}selected{{/ifCond}}>Direita</option>
    </select>
    <p class="help-block">Alinhamento do iframe caso o mesmo não ocupe toda a àrea disponível.</p>
  </div>

  {{{controllFields}}}

  {{#if id}}
    <input type="hidden" name="id" value="{{id}}">
    <button type="submit" class="btn btn-primary">{{t 'Save'}}</button>
    <button type="submit" data-dismiss="modal" class="btn btn-default">{{t 'Cancel'}}</button>
  {{else}}
    <button type="submit" class="btn btn-primary">{{t 'Add'}}</button>
    <button type="submit" data-dismiss="modal" class="btn btn-default">{{t 'Cancel'}}</button>
  {{/if}}
</form>